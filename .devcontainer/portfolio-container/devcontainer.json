{
  "service": "portfolio",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "workspaceFolder": "/home/dev/workspaces/portfolio",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "shortest",
        "typescript.preferences.quoteStyle": "single",
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.preferences.useAliasesForRenames": false,
        "typescript.preferences.jsxAttributeCompletionStyle": "none",
        "material-icon-theme.activeIconPack": "react",
        "prettier.requireConfig": true,
        // Tailwind CSS
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "tailwindCSS.experimental.configFile": "src/app/globals.css",
        "tailwindCSS.lint.cssConflict": "error",
        "tailwindCSS.lint.usedBlocklistedClass": "error",
        "tailwindCSS.validate": true,
        "editor.colorDecorators": false,
        "editor.quickSuggestions": {
          "strings": "on"
        }
      },
      "extensions": [
        "mhutchie.git-graph",
        "Exelord.git-commits",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "kentayamada.vscode-statusbar-commands",
        "kentayamada.vscode-gpt-project-loader"
      ]
    }
  }
}

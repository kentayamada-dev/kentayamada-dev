{
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "workspaceFolder": "/playground",
  "runArgs": [
    "--name",
    "playground",
    "--hostname",
    "playground"
  ],
  "features": {
    "ghcr.io/devcontainers-extra/features/pnpm:2.0.5": {}
  },
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "mhutchie.git-graph",
        "Exelord.git-commits",
        "esbenp.prettier-vscode",
        "kentayamada.vscode-statusbar-commands",
        "kentayamada.vscode-gpt-project-loader",
        "EchoAPI.echoapi-for-vscode"
      ]
    }
  }
}

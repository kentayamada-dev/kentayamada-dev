{
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile",
    "target": "dev",
    "args": {
      "USER_NAME": "dev",
      "UID": "2000"
    }
  },
  "runArgs": [
    "--env-file",
    ".devcontainer/.env",
    "--name",
    "github-profile",
    "--hostname",
    "github-profile"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/dev/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/home/dev/workspaces/github-profile",
  "postCreateCommand": "pip install --no-cache-dir --no-warn-script-location --break-system-packages --requirement requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.autoImportCompletions": true
      },
      "extensions": [
        "mhutchie.git-graph",
        "Exelord.git-commits",
        "charliermarsh.ruff",
        "kentayamada.vscode-statusbar-commands"
      ]
    }
  }
}

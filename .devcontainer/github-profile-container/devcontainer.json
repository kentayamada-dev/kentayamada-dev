{
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile",
    "target": "dev",
    "args": {
      "USER_NAME": "dev",
      "UID": "2000"
    }
  },
  "runArgs": [
    "--env-file",
    ".devcontainer/.env",
    "--name",
    "github-profile",
    "--hostname",
    "github-profile"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/dev/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/home/dev/workspaces/github-profile",
  "mounts": [
    "source=${containerWorkspaceFolderBasename}-venv,target=/home/dev/workspaces/github-profile/.venv,type=volume"
  ],
  "postCreateCommand": "python3 -m venv ./.venv && . ./.venv/bin/activate",
  "customizations": {
    "vscode": {
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "python.defaultInterpreterPath": "./.venv/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.autoImportCompletions": true,
        "ruff.lint.run": "onSave"
      },
      "extensions": [
        "mhutchie.git-graph",
        "Exelord.git-commits",
        "charliermarsh.ruff"
      ]
    }
  }
}
